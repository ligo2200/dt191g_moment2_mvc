@{
    ViewData["Title"] = "Skapa recept";
}

@model moment2_mvc.Models.RecipeModel

<h2>Lägg till nytt recept</h2>

@using (Html.BeginForm("Create", "Recipe", FormMethod.Post))
{
    <div>
        <label asp-for="Title">Titel:</label>
        <input asp-for="Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Ingredients">Ingredienser:</label>
        <textarea asp-for="Ingredients"></textarea>
        <span asp-validation-for="Ingredients" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Instructions">Instruktioner:</label>
        <textarea asp-for="Instructions"></textarea>
        <span asp-validation-for="Instructions" class="text-danger"></span>
    </div>

    <button type="submit">Lägg till recept</button>
}

